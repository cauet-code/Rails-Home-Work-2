# EditorConfig helps maintain consistent coding styles
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,css,scss,html,erb}]
indent_style = space
indent_size = 2